package com.dragon.warIII.util;

import org.apache.log4j.Logger;
import org.apache.log4j.PropertyConfigurator;

/**
 * 日志管理工具类
 * 
 * @author L.Dragon
 * 
 */
public class LogUtil {
	
	private static Logger log = Logger.getLogger("Product");

	private LogUtil() {
	}

	public static void debug(String message) {
		log.debug(message);
	}

	public static void info(String messgage) {
		log.info(messgage);
	}

	public static void warn(String messgage) {
		log.warn(messgage);
	}

	public static void error(String messgage) {
		log.error(messgage);
	}

	public static void fatal(String messgage) {
		log.fatal(messgage);
	}

}
